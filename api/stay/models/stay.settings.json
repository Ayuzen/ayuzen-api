{
  "kind": "collectionType",
  "collectionName": "stays",
  "info": {
    "name": "Stay",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "tags": {
      "collection": "tags"
    },
    "host": {
      "type": "component",
      "repeatable": false,
      "component": "stay.host"
    },
    "rooms": {
      "type": "component",
      "repeatable": true,
      "component": "stay.room"
    },
    "activities": {
      "collection": "activity"
    },
    "amenities": {
      "collection": "amenity"
    },
    "note": {
      "type": "text",
      "private": true
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "stay.address"
    },
    "starting_price": {
      "type": "decimal"
    },
    "ayuzen_rating": {
      "type": "integer",
      "max": 5,
      "min": 0
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    }
  }
}
